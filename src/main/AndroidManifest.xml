<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cpm.voto"
    android:versionCode="6"
    android:versionName="1.5">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/parinaam_logo_ico"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cpm.autoupdate.AutoupdateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cpm.web.ShowUpdateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cpm.download.CompleteDownloadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cpm.dailyentry.DailyEntryScreen"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Store List"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.cpm.upload.UploadDataActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cpm.upload.CheckoutNUpload"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.cpm.dailyentry.NonWorkingReason"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Nonworking"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainMenuActivity"
            android:label="Main Menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.cpm.dailyentry.AttendenceActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="@string/title_activity_attendence"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.cpm.dailyentry.SaleEntryActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Sale Entry"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.cpm.dailyentry.StoreEntryActivity" />
        <activity
            android:name="com.cpm.dailyentry.AuditActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Store Entry"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.cpm.dailyentry.StockEntryActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Stock Entry"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.cpm.dailyentry.PerformanceActivty"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="My Performance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>